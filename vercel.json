{
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "signaltrue.ai" }],
      "destination": "https://www.signaltrue.ai/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/marketing/index.html" },
    { "source": "/product", "destination": "/marketing/product.html" },
    { "source": "/pricing", "destination": "/marketing/pricing.html" },
    { "source": "/how-it-works", "destination": "/marketing/how-it-works.html" },
    { "source": "/about", "destination": "/marketing/about.html" },
    { "source": "/contact", "destination": "/marketing/contact.html" },
    { "source": "/privacy", "destination": "/marketing/privacy.html" },
    { "source": "/terms", "destination": "/marketing/terms.html" },
    { "source": "/solutions", "destination": "/marketing/solutions.html" },
    { "source": "/resources", "destination": "/marketing/resources.html" },
    { "source": "/ai-info-page", "destination": "/marketing/ai-info-page.html" },
    { "source": "/drift-diagnostic", "destination": "/marketing/drift-diagnostic.html" },
    { "source": "/app/privacy", "destination": "/marketing/app-privacy.html" },
    { "source": "/burnout-early-warning-system", "destination": "/marketing/burnout-early-warning-system.html" },
    { "source": "/employee-engagement-leading-indicators", "destination": "/marketing/employee-engagement-leading-indicators.html" },
    { "source": "/signals/meeting-overload", "destination": "/marketing/signals/meeting-overload.html" },
    { "source": "/signals/recovery-time-collapse", "destination": "/marketing/signals/recovery-time-collapse.html" },
    { "source": "/signals/focus-fragmentation", "destination": "/marketing/signals/focus-fragmentation.html" },
    { "source": "/signals/after-hours-drift", "destination": "/marketing/signals/after-hours-drift.html" },
    { "source": "/signals/responsiveness-pressure", "destination": "/marketing/signals/responsiveness-pressure.html" },
    { "source": "/signals/coordination-overhead", "destination": "/marketing/signals/coordination-overhead.html" },
    { "source": "/signals/manager-load", "destination": "/marketing/signals/manager-load.html" },
    { "source": "/styles.css", "destination": "/marketing/styles.css" },
    { "source": "/robots.txt", "destination": "/marketing/robots.txt" },
    { "source": "/sitemap.xml", "destination": "/marketing/sitemap.xml" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/marketing/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, s-maxage=86400" }
      ]
    }
  ]
}

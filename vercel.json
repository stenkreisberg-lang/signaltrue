{
  "version": 2,
  "name": "signaltrue-v2",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://signaltrue.ai",
    "DISABLE_ESLINT_PLUGIN": "true"
  },
  "build": {
    "env": {
      "DISABLE_ESLINT_PLUGIN": "true"
    }
  }
}
